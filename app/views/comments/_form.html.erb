<%= render 'shared/errors', obj: @comment if @comment %>
<%= form_with(model: [@organization, @project, post, Comment.new], local: false) do |f| %>
    <%= f.text_area :body, class: "form-control", placeholder: "Write a comment...", id: "post-#{post.id}-form" %>
    <%= f.submit "Submit", class: "btn btn-primary float-right" %>
<% end %>