<!-- Button trigger modal -->
<button type="button" class="float-right btn btn-primary" data-toggle="modal" data-target="#new-post-modal">
<i class="fas fa-plus"></i>   New Post
</button>
</br>
</br>

<!-- Modal -->
<div class="modal fade" id="new-post-modal" tabindex="-1" role="dialog" aria-labelledby="new-post-modalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
      <h5 class="modal-title" id="new-post-modalLabel">New Post</h5>
        <button type="button" id="post-form-close-button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
      <%= form_with(model: [@organization, @project, Post.new], local: false, format: :js) do |f| %>
  
        <div class="form-group">
        <%= f.label :title %>
          <%= f.text_field :title, class: "form-control", id: "post-form-title-field" %>
        </div> 
        <div class="form-group">
          <%= f.label :body %>
          <%= f.text_area :body, class: "form-control", id: "post-form-body-field" %>
        </div> 
      
        <div class="form-group">
          <%= f.label :priority %>
          <%= f.select(:priority, [["Low", 4], ["Medium", 3], ["High", 2], ["Urgent", 1]], class: "form-control") =%>
        </div>
      
        <div class="form-group">
          <%= f.label :status %>
          <%= f.select(:status, ["Active", "Complete", "Archived"], class: "form-control") =%>
        </div>
      
        <%= f.submit "Create comment", class: "btn btn-primary" %>
      
        <% end %>
      </div>
    </div>
  </div>
</div>
